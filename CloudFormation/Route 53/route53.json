{
"AWSTemplateFormatVersion": "2010-09-09",
    "Description": "",
    "Metadata": {

    },
    "Parameters": {
        
        "DomainName": {
            "Description": "Name of the Domain",
            "Type": "String",
            "Default": "dreoconsulting.com"
        },
        
        "HostedZoneId": {
            "Description": "AWS Route53 Hosted Zone",
            "Type": "AWS::SSM::Parameter::Value<String>",
            "Default": "/Dreo/HostedZoneId"
        }
           
    },
    "Mappings": {

    },
    "Conditions": {

    },
    "Resources": {
        
        "Route53RS": {
            "Type": "AWS::Route53::RecordSet",
            "Properties": {
                "Name": 
                { "Ref": "DomainName" },
                "Type": "A",
                "HostedZoneId": 
                { "Ref": "HostedZoneId" },
                "AliasTarget": {
                    "DNSName": {
                        "Fn::ImportValue": {
                            "Fn::Sub": "ALBDNSName"
                        }
                    },
                    "HostedZoneId": {
                        "Fn::ImportValue": {
                            "Fn::Sub": "ALBHostedId"
                        }
                    }
                }
            }
        }             

    },
    "Outputs": {

    }
}